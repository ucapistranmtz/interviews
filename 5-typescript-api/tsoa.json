{
  "entryFile": "src/app.ts",
  "controllerPathGlobs": [
    "src/controllers/*.ts"
  ],
  "noImplicitAdditionalProperties": "throw-on-extras",
  "spec": {
    "outputDirectory": "src/docs",
    "specVersion": 3,
    "basePath": "/",
    "title": "Typescript API",
    "version": "1.0.0",
    "securityDefinitions": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    },
    "security": [
      {
        "bearerAuth": []
      }
    ]
  },
  "routes": {
    "routesDir": "src/routes",
    "authenticationModule": "src/tsoa-auth"
  }
}