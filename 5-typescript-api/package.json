{
  "name": "5-typescript-api",
  "version": "1.0.0",
  "description": "Typescript REST API with TSOA, MongoDB, JWT, and traceability",
  "main": "dist/app.js",
  "scripts": {
    "prebuild": "npm run tsoa:build",
    "tsoa:routes": "tsoa routes",
    "tsoa:spec": "tsoa spec",
    "tsoa:build": "npm run tsoa:routes && npm run tsoa:spec",
    "prestart": "npm run build",
    "build": "tsc && tsc-alias",
    "postbuild": "echo Copying Swagger... && shx mkdir -p dist/docs && shx cp src/docs/swagger.json dist/docs/swagger.json",
    "start": "node -r tsconfig-paths/register dist/app.js",
    "dev": "nodemon",
    "lint": "eslint 'src/**/*.{ts,tsx}'",
    "lint:fix": "eslint 'src/**/*.{ts,tsx}' --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check ."
  },
  "dependencies": {
    "bcrypt": "^6.0.0",
    "cors": "^2.8.5",
    "dotenv": "^16.5.0",
    "express": "^5.1.0",
    "express-rate-limit": "^7.5.0",
    "helmet": "^8.1.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.15.0",
    "shx": "^0.4.0",
    "swagger-ui-express": "^5.0.1",
    "tsc-alias": "^1.8.16",
    "tsoa": "^6.6.0",
    "uuid": "^11.1.0",
    "winston": "^3.17.0",
    "zod": "^3.24.4"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/cors": "^2.8.18",
    "@types/express": "^5.0.2",
    "@types/jsonwebtoken": "^9.0.9",
    "@types/mongoose": "^5.11.97",
    "@types/node": "^22.15.18",
    "@types/swagger-ui-express": "^4.1.8",
    "@typescript-eslint/eslint-plugin": "^8.32.1",
    "@typescript-eslint/parser": "^8.32.1",
    "eslint": "^9.27.0",
    "eslint-config-prettier": "^10.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "nodemon": "^3.1.10",
    "prettier": "^3.5.3",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.8.3"
  }
}