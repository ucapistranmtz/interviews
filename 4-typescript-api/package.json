{
  "name": "my-typescript-api",
  "version": "1.0.0",
  "description": "Typescript api with popular middlewares for Authorization,Authentication etc. ",
  "keywords": [
    "typescript",
    "cors",
    "helmet"
  ],
  "homepage": "https://github.com/ucapistranmtz/samples#readme",
  "bugs": {
    "url": "https://github.com/ucapistranmtz/samples/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ucapistranmtz/samples.git"
  },
  "license": "ISC",
  "author": "Ulises Capistran",
  "type": "commonjs",
  "main": "app.js",
  "scripts": {
    "prebuild": "shx rm -rf dist",
    "build": "tsc && tsc-alias",
    "postbuild": "echo Copying Swagger... && shx mkdir -p dist/docs && shx cp src/docs/swagger.json dist/docs/swagger.json",
    "prestart": "npm run tsoa:build && npm run build",
    "start": "node -r tsconfig-paths/register dist/app.js",
    "dev": "nodemon --exec ts-node -r tsconfig-paths/register src/app.ts",
    "test": "jest",
    "tsoa:routes": "tsoa routes",
    "tsoa:spec": "tsoa spec",
    "tsoa:build": "npm run tsoa:routes && npm run tsoa:spec",
    "lint": "eslint 'src/**/*.{ts,tsx}'",
    "lint:fix": "eslint 'src/**/*.{ts,tsx}' --fix"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.5.0",
    "express": "^5.1.0",
    "express-rate-limit": "^7.5.0",
    "helmet": "^8.1.0",
    "jest": "^29.7.0",
    "mongoose": "^8.15.0",
    "nodemon": "^3.1.10",
    "shx": "^0.4.0",
    "swagger-ui-express": "^5.0.1",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "tsoa": "^6.6.0",
    "uuid": "^11.1.0",
    "winston": "^3.17.0",
    "zod": "^3.24.4"
  },
  "devDependencies": {
    "@types/cors": "^2.8.18",
    "@types/detect-port": "^1.3.5",
    "@types/dotenv": "^6.1.1",
    "@types/express": "^5.0.2",
    "@types/mongoose": "^5.11.96",
    "@types/node": "^22.15.18",
    "@types/swagger-ui-express": "^4.1.8",
    "@typescript-eslint/eslint-plugin": "^8.32.1",
    "@typescript-eslint/parser": "^8.32.1",
    "eslint": "^9.27.0",
    "eslint-config-prettier": "^10.1.5",
    "ts-node-dev": "^2.0.0",
    "tsc-alias": "^1.8.16",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.32.1"
  }
}
