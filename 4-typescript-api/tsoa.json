{
  "entryFile": "src/app.ts",
  "noImplicitAdditionalProperties": "throw-on-extras",
  "controllerPathGlobs": ["src/controllers/**/*.ts"],
  "spec": {
    "outputDirectory": "src/docs",
    "specVersion": 3,
    "basePath": "/",
    "title": "TypeScript API",
    "version": "1.0.0",
    "securityDefinitions": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer"
      }
    },
    "security": [{ "bearerAuth": [] }]
  },
  "routes": {
    "routesDir": "src/routes"
  }
}
